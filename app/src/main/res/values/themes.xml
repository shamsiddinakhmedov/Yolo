<resources>
    <!-- Base application theme. -->
    <style name="Theme.Yolo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/theme</item>
        <item name="colorPrimaryVariant">@color/theme</item>
        <item name="colorOnPrimary">@color/purple_200</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/purple_700</item>
        <item name="colorOnSecondary">@color/grey</item>
        <!-- Status bar color. -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <item name="android:statusBarColor">@color/theme</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/ic_splash_bg</item>
    </style>

    <style name="TabText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>